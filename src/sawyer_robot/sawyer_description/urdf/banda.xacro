<?xml version="1.0" encoding="utf-8"?>
<robot name="banda" xmlns:xacro="http://www.ros.org/wiki/xacro">

    <!-- Joint entre el mundo y la banda -->
    <joint name="banda_junta" type="fixed">
        <parent link="world"/>
        <child link="belt_visual"/>
        <origin xyz="0.5 -1.0 -0.91488" rpy="0 0 1.57"/> <!-- Rotación en Z -->
    </joint>

    <!-- Definición de la banda visual -->
    <link name="belt_visual">
        <inertial>
            <origin xyz="-1.1327e-16 -3.3286e-17 0.66619" rpy="0 0 0"/>
            <mass value="71.955"/>
            <inertia ixx="7.5972" ixy="-1.3948e-14" ixz="-1.9328e-17" 
                     iyy="0.99673" iyz="-9.2056e-18" izz="8.1168"/>
        </inertial>
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://demo_world/meshes/conveyor_belt.stl" scale="2 3 1"/>
            </geometry>
            <material name="white">
                <color rgba="1 1 1 1"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://demo_world/meshes/conveyor_belt.stl" scale="2 3 1"/>
            </geometry>
        </collision>
    </link>

    <!-- Joint prismatico para mover la banda -->
    <joint name="belt_joint" type="prismatic">
        <origin xyz="0 0 0.74" rpy="0 0 0"/>
        <parent link="belt_visual"/>
        <child link="belt_moving"/>
        <axis xyz="0 1 0"/>
        <limit lower="0" upper="1" effort="1000" velocity="1000"/>
    </joint>

    <!-- Definición del movimiento de la banda -->
    <link name="belt_moving">
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="100"/>
            <inertia ixx="0.0" ixy="0.0" ixz="0.0" 
                     iyy="0.0" iyz="0.0" izz="0.0"/>
        </inertial>
        <visual>
            <origin xyz="0 0 0.0005" rpy="0 0 0"/>
            <geometry>
                <box size="0.85 3.6 0.001"/>
            </geometry>
            <material name="test">
                <color rgba="1 0 1 1"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 0.0005" rpy="0 0 0"/>
            <geometry>
                <box size="0.85 3.6 0.001"/>
            </geometry>
        </collision>

        <!-- Cámara binaria para detección de objetos -->
        <gazebo reference="belt_moving">
            <sensor type="camera" name="binary_camera">
                <update_rate>30</update_rate>
                <camera>
                    <horizontal_fov>1.047</horizontal_fov>
                    <image>
                        <width>640</width>
                        <height>480</height>
                        <format>L8</format>  <!-- Imagen en escala de grises (binaria) -->
                    </image>
                    <clip>
                        <near>0.1</near>
                        <far>5.0</far>
                    </clip>
                    <pose>0 0 0.5 0 0 0</pose>  <!-- Cámara encima de la banda -->
                </camera>
                <plugin name="camera_plugin" filename="libgazebo_ros_camera.so">
                    <always_on>true</always_on>
                    <update_rate>30.0</update_rate>
                    <camera_name>binary_camera</camera_name>
                    <image_topic_name>/camera/image_raw</image_topic_name>
                    <info_topic_name>/camera/camera_info</info_topic_name>
                    <frame_name>camera_link</frame_name>
                </plugin>
            </sensor>
        </gazebo>
    </link>

    <!-- Plugin para el movimiento de la banda -->
    <gazebo>
        <plugin name="conveyor_belt_plugin" filename="libROSConveyorBeltPlugin.so">
            <robot_namespace>/</robot_namespace>
            <link>belt_moving</link>
            <power>0</power>
            <max_velocity>1.0</max_velocity>
        </plugin>
    </gazebo>
</robot>
